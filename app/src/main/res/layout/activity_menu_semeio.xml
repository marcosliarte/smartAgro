<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Barra de Título -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Menu Principal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="35dp"/>

    <!-- Botão de Adubação -->
    <Button
        android:id="@+id/buttonAdubacao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/green"
        android:drawableStart="@drawable/adubacao"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Adubação"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="28dp" />

    <!-- Botão de Cálculo de Volume para Pulverizador -->
    <Button
        android:id="@+id/buttonCalculoPulverizador"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonAdubacao"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/green"
        android:drawableStart="@drawable/pulverizacao"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Cálculo de Volume para Pulverizador"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="28dp" />

</RelativeLayout>
