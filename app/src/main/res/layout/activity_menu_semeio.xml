<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <Button
        android:id="@+id/buttonSemeio"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:drawableStart="@drawable/semeio"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Semeio"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="28dp" />

    <Button
        android:id="@+id/buttonAdubacao"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_below="@id/buttonSemeio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:drawableStart="@drawable/adubacao"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Adubação"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="28dp" />

    <Button
        android:id="@+id/buttonCalculoPulverizador"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_below="@id/buttonAdubacao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Cálculo de Volume para Pulverizador"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/pulverizacao"
        android:background="@drawable/button_background"
        android:elevation="4dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:padding="12dp"
        app:cornerRadius="28dp" />

</RelativeLayout>
